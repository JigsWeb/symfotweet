{% form_theme form _self %}

{% trans_default_domain 'FOSUserBundle' %}

<div class="col-lg-6 col-lg-offset-3 panel panel-default">
  <div class="panel-body">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
      <div class="form-group">
        {{ form_label(form.email, 'Adresse Ã©lectronique') }}
        {{ form_widget(form.email,{'attr': {'class': 'form-control'}}) }}
      </div>

      <p>{{ form_errors(form.email) }}</p>

      <div class="form-group">
        {{ form_label(form.username, "Nom d'utilisateur") }}
        {{ form_widget(form.username,{'attr': {'class': 'form-control'}}) }}
      </div>

      <p>{{ form_errors(form.username) }}</p>

      <div class="form-group">
        {{ form_label(form.plainPassword.first, "Mot de passe") }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
      </div>

      <p>{{ form_errors(form.plainPassword.first) }}</p>

      <div class="form-group">
        {{ form_label(form.plainPassword.second, "Confirmation") }}
        {{ form_widget(form.plainPassword.second,{'attr': {'class': 'form-control'}}) }}
      </div>

      <button type="submit" class="btn btn-default btn-lg btn-block">Envoyer</button>
    {{ form_end(form) }}
  </div>
</div>

{% block form_errors %}
    {% spaceless %}
        {% if form.vars.errors|length > 0 %}
        <ul>
            {% for error in form.vars.errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}


{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<div class="row">
  <div class="col-lg-6 col-lg-offset-3 panel panel-default">
    <div class="panel-body">
      <form action="{{ path("fos_user_security_check") }}" method="post">
          <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

          <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
          </div>

          <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" class="form-control" name="_password" required="required" />
          </div>

          <div class="checkbox">
            <label>
              <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Se souvenir de moi
            </label>
          </div>

          <input type="submit" id="_submit" name="_submit" value="Se connecter" />
      </form>
    </div>
  </div>
</div>

{% if error %}
<div class="row">
  <div class="col-lg-5 col-lg-offset-2">
    <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  </div>
</div>
{% endif %}

{% endblock fos_user_content %}
